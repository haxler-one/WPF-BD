<Window x:Class="WPF_BD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Авторизация/Регистрация" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Имя пользователя:" />
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10" />

            <Label Content="Пароль:" />
            <PasswordBox x:Name="PasswordTextBox" Margin="0,0,0,10" />

            <Button x:Name="RegisterButton" Content="Зарегистрироваться" Click="RegisterButton_Click" Margin="0,0,0,10" />
            <Button x:Name="LoginButton" Content="Войти" Click="LoginButton_Click" />
        </StackPanel>
    </Grid>
</Window>